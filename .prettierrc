{
  "semi": true,
  "singleQuote": false,
  "trailingComma": "all",
  "arrowParens": "avoid",
  "tabWidth": 2,
  "printWidth": 100,
  "endOfLine": "auto",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrderSeparation": true,
  "importOrder": [
    "^react$",
    "^next(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@/(env|config)(/.*)?$",
    "^@/lib(/.*)?$",
    "^@/hooks(/.*)?$",
    "^@/utils(/.*)?$",
    "^@/components(/.*)?$",
    "^@/(styles|assets)(/.*)?$",
    "^[./].*\\.css$"
  ],
  "importOrderSortSpecifiers": true
}
